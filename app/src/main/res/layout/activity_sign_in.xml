<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pickle.pickleproject.SignIn"
    android:background="@color/darkgray">

    <com.pickle.pickleproject.MontserratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/signin"
        android:id="@+id/signintitle"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/usernameinput"
        android:textSize="30sp"
        android:background="@color/white"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:hint="username"
        android:singleLine="true"
        android:layout_marginTop="180dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/passwordinput"
        android:background="@color/white"
        android:textSize="30sp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:autoText="false"
        android:textIsSelectable="false"
        android:hint="password"
        android:singleLine="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/usernameinput" />

    <com.pickle.pickleproject.MontserratButton
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="@string/signin"
        android:id="@+id/signinbutton"
        android:background="@color/green"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:autoText="false"
        android:singleLine="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/signingoogleplusbutton"
        android:layout_alignParentRight="true"
        android:gravity="center" />

    <com.pickle.pickleproject.MontserratButton
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="@string/signinGoogle"
        android:id="@+id/signingoogleplusbutton"
        android:background="@color/red"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:autoText="false"
        android:singleLine="false"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/noAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/accountFalse"
        android:id="@+id/noAccount"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="50dp" />

</RelativeLayout>


