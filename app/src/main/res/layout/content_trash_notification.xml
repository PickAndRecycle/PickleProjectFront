<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_trash_notification"
    tools:context="com.pickle.pickleproject.TrashNotification"
    android:background="#3e4651"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">

        <com.pickle.pickleproject.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/success"
            android:id="@+id/successTitle"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/notifytrash"
            android:id="@+id/successNotifyTrash"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="20dp"
            android:singleLine="false"
            android:gravity="center_horizontal"
            android:layout_below="@+id/reportImage"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/reportImage"
            android:src="@drawable/trashbin"
            android:layout_below="@+id/successTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <com.pickle.pickleproject.MontserratButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/share"
            android:id="@+id/shareButton"
            android:layout_below="@+id/successTitle"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <com.pickle.pickleproject.MontserratButton
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/backHome"
            android:id="@+id/Back_Home"
            android:background="#f1654c"
            android:textColor="@color/white"
            android:singleLine="false"
            android:textSize="20sp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
