<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_view_article"
    tools:context="com.pickle.pickleproject.ViewArticle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#6C7A89"
        android:id="@+id/relativeLayout7"
        android:layout_alignParentStart="false">

        <com.pickle.pickleproject.MontserratTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/newsfeedText"
            android:id="@+id/newsfeedText"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="#FFFFFF" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backArticleButton"
            android:src="@mipmap/backicon"
            android:background="#00ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/relativeLayout7" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/articleBody">

            <com.pickle.pickleproject.MontserratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sampleTitleText"
                android:id="@+id/articleTitle"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" />

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="300dp"
                android:layout_height="180dp"
                android:id="@+id/articlePhoto"
                android:background="#00FFFFFF"
                android:layout_below="@+id/articleTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/loremipsum"
                android:id="@+id/articleContent"
                android:singleLine="false"
                android:phoneNumber="false"
                android:layout_below="@+id/articlePhoto"
                android:layout_alignLeft="@+id/articlePhoto"
                android:layout_alignStart="@+id/articlePhoto"
                android:layout_alignRight="@+id/articlePhoto"
                android:layout_alignEnd="@+id/articlePhoto"
                android:layout_marginTop="20dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
