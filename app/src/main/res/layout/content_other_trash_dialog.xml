<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_other_trash_dialog"
    tools:context="com.pickle.pickleproject.other_trash_dialog"
    android:background="#b1000000">

    <RelativeLayout
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:background="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#3E4651"
            android:id="@+id/relativeLayout5" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/detailsText"
                android:id="@+id/detailsText"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <Button
            android:layout_width="290dp"
            android:layout_height="70dp"
            android:text="@string/submitText"
            android:id="@+id/button3"
            android:background="#00B5b5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/titleText"
            android:id="@+id/titleText"
            android:layout_below="@+id/relativeLayout5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="18dp" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_below="@+id/titleText"
            android:layout_alignLeft="@+id/titleText"
            android:layout_alignStart="@+id/titleText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/conditionText"
            android:id="@+id/conditionText"
            android:layout_marginTop="23dp"
            android:layout_below="@+id/editText4"
            android:layout_alignLeft="@+id/editText4"
            android:layout_alignStart="@+id/editText4" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conditionSpinner"
            android:layout_above="@+id/button3"
            android:layout_alignRight="@+id/editText4"
            android:layout_alignEnd="@+id/editText4"
            android:layout_marginLeft="280dp" />
    </RelativeLayout>
</RelativeLayout>
