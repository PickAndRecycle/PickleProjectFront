<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_throw_category"
    tools:context="com.pickle.pickleproject.ThrowCategory"
    android:orientation="vertical"
    android:id="@+id/backgroundLayout">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:background="@color/blackoverlay"
        android:id="@+id/categoryContent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/unusedGoodsLayout"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/UnusedButton"
                    android:background="@drawable/unusedgoods"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/unusedGoods"
                    android:id="@+id/unusedGoodsText"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:layout_marginBottom="27dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclableWasteLayout"
                android:layout_below="@+id/unusedGoodsLayout"
                android:layout_toLeftOf="@+id/greenWasteLayout"
                android:layout_toStartOf="@+id/greenWasteLayout"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/RecycleButton"
                    android:background="@drawable/recyclablewaste"
                    android:layout_centerInParent="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/recyclableWaste"
                    android:id="@+id/recyclableWasteText"
                    android:layout_marginBottom="27dp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="16sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/generalWasteLayout"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/GeneralButton"
                    android:background="@drawable/generalwaste"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/generalWaste"
                    android:id="@+id/generalWasteText"
                    android:layout_marginBottom="27dp"
                    android:textColor="#FFFFFF"
                    android:layout_alignParentBottom="true"
                    android:textSize="16sp"
                    android:layout_centerInParent="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/greenWasteLayout"
                android:layout_below="@+id/unusedGoodsLayout"
                android:layout_alignLeft="@+id/generalWasteLayout"
                android:layout_alignStart="@+id/generalWasteLayout"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/GreenButton"
                    android:background="@drawable/greenwaste"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/greenWaste"
                    android:id="@+id/greenWasteText"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="27dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_weight="0.1"
        android:id="@+id/backButtonLayout">

        <com.pickle.pickleproject.MontserratButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/back"
            android:id="@+id/backButton"
            android:layout_alignParentBottom="true"
            android:background="#f1654c"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
